{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "paths": {
      "@automation/types": ["../types/src"],
      "@automation/data": ["../data/src"],
      "@automation/services": ["../services/src"],
      "@automation/utils": ["../utils/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
