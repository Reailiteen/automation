{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./apps/web/*"],
      "@automation/types": ["../../packages/types/src"],
      "@automation/agents": ["../../packages/agents/src"],
      "@automation/services": ["../../packages/services/src"],
      "@automation/data": ["../../packages/data/src"],
      "@automation/utils": ["../../packages/utils/src"],
      "@automation/auth": ["../../packages/auth/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
